{
  "extends": [
    "plugin:base-style-config/js-rules, import-rules, react-rules, unused-imports-rules",
    "plugin:base-style-config/regex[copyright], regex[jsx], regex[quotes.jsx]"
  ],
  "env":{
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "base-style-config",
    "regex"
  ],
  "root": true,
  "rules": {
    "no-console": "error",
    "no-invalid-this": "error",
    "no-throw-literal": "off",
    "import/exports-last": "error",
    "quotes":  [
      "error",
      "single", {
        "avoidEscape": true
      }
    ],
    "max-len": ["error", { "code": 160, "ignoreComments": true } ],
    "react/no-multi-comp": "off",
    "react/display-name": "off",
    "semi": [
      "error",
      "never"
    ],
    "valid-jsdoc": "off"
  }
}
